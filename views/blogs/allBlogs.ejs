<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <style>
        /* Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            display: flex;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background: linear-gradient(145deg, #4a00e0, #8e2de2);
            padding-top: 20px;
            position: fixed;
            top: 0;
            left: 0;
            min-height: 100vh;
            transition: width 0.3s ease;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 20px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 15px 20px;
            font-size: 18px;
            transition: background 0.3s ease, padding-left 0.3s ease;
        }

        .sidebar ul li a i {
            margin-right: 15px;
            font-size: 20px;
        }

        .sidebar ul li a:hover {
            background-color: rgba(255, 255, 255, 0.1);
            padding-left: 30px;
        }

        /* Create Blog Button with Emphasis */
        .btn-create-blog {
            background-color: #ff4081;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: bold;
            transition: background-color 0.3s ease, padding-left 0.3s ease;
        }

        .btn-create-blog:hover {
            background-color: #ff3d70;
            padding-left: 35px;
        }

        /* Sidebar Collapse for Mobile */
        @media (max-width: 768px) {
            .sidebar {
                width: 80px;
            }

            .sidebar ul li a {
                font-size: 0;
                padding: 15px 10px;
            }

            .sidebar ul li a i {
                font-size: 24px;
                margin-right: 0;
            }

            .sidebar ul li a:hover {
                padding-left: 10px;
            }

            .btn-create-blog {
                font-size: 0;
                padding: 15px;
                text-align: center;
            }

            .btn-create-blog i {
                font-size: 24px;
            }
        }

        /* Main Content */
        .content {
            flex: 1;
            padding: 20px;
        }

        h2 {
            text-align: left;
            margin-bottom: 20px;
            color: #333;
            font-size: 2rem;
        }

        .text-set {
            text-align: left;
            margin-bottom: 20px;
            color: #333;
            font-size: 2rem;
            margin-left: 260px;
        }

        /* Blog Cards */
        .blogs-list {
            display: flex;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-left: 260px;
        }

        .blog-card {
            background-color: #fff;
            border-radius: 10px;
            width: 400px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .blog-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-bottom: 5px solid #6c63ff;
            border-radius: 10px 10px 0 0;
        }

        .blog-content {
            padding: 15px;
            padding-top: 5px;
            padding-bottom: 0;
        }

        .blog-content h2 {
            font-size: 1.8rem;
            color: #000;
            margin-bottom: 10px;
            text-align: left;
            font-weight: 600;
        }

        .blog-content p {
            font-size: 1 rem;
            color: #666;
            text-align: left;
        }

        /* Comment Section */
        .comments-section {
            padding: 15px;
            padding-top: 5px;
            border-top: 1px solid #ddd;
            background-color: #f9f9f9;
            margin-top: 10px;
        }

        .comments-section h4 {
            font-size: 1rem;
            color: #333;
            margin-bottom: 10px;
        }

        .avatar {
            width: 45px;
            height: 45px;
            object-fit: cover;
            border-radius: 50%;
        }

        .comment-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .comment-chat {
            margin-left: 10px;
        }

        .comment-user {
            font-weight: bold;
            color: #000;
        }

        .comment {
            color: #333;
        }

        /* Comment Form */
        .comment-form textarea {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
            resize: none;
            font-size: 0.9rem;
        }

        .comment-form button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #6c63ff;
            color: white;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .comment-form button:hover {
            background-color: #5855d6;
        }

        /* Toggle Button Styles */
        .toggle-btn,
        .view-all-btn {
            background-color: transparent;
            border: none;
            cursor: pointer;
            margin-top: 4px;
            width: 100%;
            text-align: left;
            padding-bottom: 12px;
        }

        .hidden-comment {
            display: none;
        }

        .show {
            display: block;
        }

        .set2 {
            height: 40px;
            width: 40px;
            padding: 0;
            margin: 0;
        }

        .set3 {
            height: 25px;
            width: 35px;
        }

        .view-all-btn {
            color: grey;
            text-decoration: underline;
        }

        .comment-form {
            background-color: #f9f9f9;
            /* Light background for form */
            border-radius: 10px;
            /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            /* Subtle shadow */
            transition: all 0.3s ease;
            /* Smooth transition for hover effect */
        }

        .comment-form:hover {
            transform: translateY(-5px);
            /* Lifts the form slightly on hover */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            /* Enhances shadow on hover */
        }

        .form-control {
            border: none;
            /* Remove default border */
            background-color: #e9ecef;
            /* Light gray background */
            border-radius: 5px;
            /* Soft rounded input field */
            padding: 10px;
            font-size: 1rem;
            /* Set font size */
            resize: none;
            /* Disable resizing */
        }

        .form-control:focus {
            background-color: #fff;
            /* Change background on focus */
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
            /* Add focus shadow */
            outline: none;
            /* Remove outline */
        }

        .btn-primary {
            background-color: #007bff;
            /* Primary blue color */
            border: none;
            /* Remove default border */
            border-radius: 50px;
            /* Fully rounded button */
            font-size: 1rem;
            /* Adjust button font size */
            padding: 0.5rem 1.5rem;
            /* Adequate padding for button */
            transition: background-color 0.2s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            /* Darken on hover */
        }

        .hidden-comment {
            display: none;
            /* Hide the comment form initially */
        }

        /* Mobile Friendly Adjustments */
        @media (max-width: 600px) {
            .blogs-list {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <ul>
            <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
            <li><a href="/blogs/my-blogs"><i class="fas fa-user"></i> My Blogs</a></li>
            <li><a href="/addTopicForm"><i class="fas fa-plus"></i> Add Topic</a></li>
            <li><a href="/changePassForm"><i class="fas fa-lock"></i> Change Password</a></li>
            <li><a href="/blogs/new" class="btn-create-blog"><i class="fas fa-pen"></i> Create Blog</a></li>
            <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2 class="text-set">All Blogs</h2>
        <div class="blogs-list">
            <% blogs.forEach(blog=> { %>
                <div class="blog-card">
                    <img src="/upload/<%= blog.image %>" alt="Blog Image" class="blog-image">
                    <div class="blog-content">
                        <div class="d-flex align-items-center">
                            <!-- Like Button -->
                            <img src="https://www.shareicon.net/data/2017/06/22/887607_heart_512x512.png" alt="Like"
                                class="set2">

                            <!-- Comment Button to toggle only the comment form -->
                            <button id="toggle-comment-btn-<%= blog._id %>" class="toggle-btn m-0 p-0"
                                style="width: 35px; " onclick="toggleCommentForm('<%= blog._id %>')">
                                <img src="https://cdn0.iconfinder.com/data/icons/social-media-logo-4/32/Social_Media_instagram_comment-512.png"
                                    alt="Toggle Comment Form" style="width: 35px; height: 35px; padding: 0; margin: 0;">
                            </button>

                            <!-- Like Button -->
                            <img src="https://static.thenounproject.com/png/1498877-200.png" alt="Like" class="set3">
                        </div>

                        <h2 class="mt-2">
                            <%= blog.title %>
                        </h2>
                        <p>
                            <%= blog.content.substring(0, 100) %>...
                        </p>
                    </div>
                    <form id="comment-form-<%= blog._id %>" class="comment-form hidden-comment p-3 shadow-sm rounded"
                        action="/blogs/<%= blog._id %>/comment" method="POST">
                        <div class="form-group mb-3">
                            <textarea name="comment" class="form-control" rows="3" placeholder="Write your comment..."
                                required></textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary px-4 py-2">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Comment Section -->

                    <div class="comments-section">

                        <!-- View All Comments Link -->
                        <button class="view-all-btn" onclick="toggleComments('<%= blog._id %>')">View All
                            Comments</button>

                        <div class="comment-list">
                            <% const blogComments=comments.filter(comment=> comment.blog && comment.blog._id &&
                                comment.blog._id.equals(blog._id)); %>

                                <% blogComments.reverse().slice(0, 2).forEach(comment=> { %>
                                    <div class="comment-item">
                                        <img src="../../<%= comment.user.profilePic %>" alt="<%= comment.user.name %>"
                                            class="avatar"
                                            onerror="this.onerror=null; this.src='/images/default-avatar.png';">
                                        <div class="comment-chat">
                                            <span class="comment-user">
                                                <%= comment.user.name %>
                                            </span><br>
                                            <span class="comment ps-0">
                                                <%= comment.comment %>
                                            </span>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <!-- Hidden Comments -->
                                        <div id="hidden-comments-<%= blog._id %>" class="hidden-comment">
                                            <% blogComments.slice(2).forEach(comment=> { %>
                                                <div class="comment-item">
                                                    <img src="../../<%= comment.user.profilePic %>"
                                                        alt="<%= comment.user.name %>" class="avatar"
                                                        onerror="this.onerror=null; this.src='/images/default-avatar.png';">
                                                    <div class="comment-chat">
                                                        <span class="comment-user">
                                                            <%= comment.user.name %>
                                                        </span>
                                                        <span class="comment">
                                                            <%= comment.comment %>
                                                        </span>
                                                    </div>
                                                </div>
                                                <% }); %>
                                        </div>
                        </div>
                        <!-- Comment Form -->
                        <form id="comment-form-<%= blog._id %>" class="comment-form2 hidden-comment"
                            action="/blogs/<%= blog._id %>/comment" method="POST">
                            <textarea name="comment" rows="3" placeholder="Add a comment..." required></textarea>
                            <button type="submit">Post Comment</button>
                        </form>
                        <!-- Toggle Button with Icon -->

                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <script>
        // Toggle visibility of the full comments section and comment form
        function toggleComments(blogId) {
            const hiddenComments = document.getElementById(`hidden-comments-${blogId}`);
            const commentForm = document.getElementById(`comment-form-${blogId}`);

            if (hiddenComments.classList.contains('hidden-comment')) {
                hiddenComments.classList.remove('hidden-comment');
                hiddenComments.classList.add('show');
                commentForm.classList.remove('hidden-comment2'); // Show comment form
            } else {
                hiddenComments.classList.add('hidden-comment');
                hiddenComments.classList.remove('show');
                commentForm.classList.add('hidden-comment2'); // Hide comment form
            }
        }

        // Toggle visibility of the comment form only
        function toggleCommentForm(blogId) {
            const commentForm = document.getElementById(`comment-form-${blogId}`);

            if (commentForm.classList.contains('hidden-comment')) {
                commentForm.classList.remove('hidden-comment'); // Show comment form
            } else {
                commentForm.classList.add('hidden-comment'); // Hide comment form
            }
        }
    </script>

</body>

</html>